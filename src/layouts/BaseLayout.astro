---
/* 1. Imports */
import logo           from './../assets/logo-gd.webp';
import FooterLogo     from './../assets/footer-logo.webp';
import WhatsAppIcon   from './../assets/whatsapp.webp';
import RegisterIcon   from './../assets/register.webp';
import LoginIcon      from './../assets/login.webp';

/* 2. Astro View-Transitions Router */
import { ClientRouter } from 'astro:transitions';

/* 3. Props */
const { title = 'Global Dynamic Talent Solution',
        description = 'Global Dynamic Talent Solution is your trusted partner for staffing, recruitment, and career solutions.' } = Astro.props;
const currentYear = new Date().getFullYear();
--- 

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/webp" href="/favicon.webp" />
    <meta name="generator" content={Astro.generator} />
    <meta name="turbo-cache-control" content="no-preview" />
    <title>{title}</title>

    <!-- Alpine CDN -->
    <script defer src="https://unpkg.com/alpinejs@3.x.x/dist/cdn.min.js"></script>

    <!-- Astro Client Router -->
    <ClientRouter />
  </head>

  <body class="bg-white text-gray-900 font-poppins" x-data="{ open: false }">

    <!-- TOP BAR (unchanged) -->
    <div class="bg-[#3689e7] text-xs md:text-sm text-gray-100 py-2 px-4 md:px-20 flex justify-between items-center">
      <div><p>We are the No.1 job consultancy</p></div>
      <div class="flex items-center space-x-6">
        <a href="https://api.whatsapp.com/send?phone=918220782221" target="_blank" rel="noopener noreferrer" title="Chat on WhatsApp" class="hover:opacity-80">
          <img src={WhatsAppIcon.src} alt="WhatsApp" class="w-5 h-5" />
        </a>
        <a href="https://gdtsolution.com/wp-login.php" target="_blank" rel="noopener noreferrer" class="flex items-center space-x-1 hover:text-yellow-500">
          <img src={LoginIcon.src} alt="Login" class="w-4 h-4" />
          <span>Login</span>
        </a>
        <a href="https://gdtsolution.com/wp-login.php?action=register" target="_blank" rel="noopener noreferrer" class="flex items-center space-x-1 hover:text-yellow-500">
          <img src={RegisterIcon.src} alt="Register" class="w-4 h-4" />
          <span>Register</span>
        </a>
      </div>
    </div>

    <!-- HEADER with off-canvas (below top-bar) -->
    <header class="sticky top-0 z-30 bg-white text-black p-4 shadow">
      <div class="max-full-w mx-auto flex justify-between items-center md:px-20">
        <a href="/test/">
          <img src={logo.src} alt="GDTS Logo" class="h-14 w-auto" />
        </a>

        <!-- Hamburger (mobile) -->
        <button @click="open = true" class="md:hidden text-2xl">☰</button>

        <!-- Desktop Nav + CTA -->
        <nav class="hidden md:flex items-center space-x-6">
          <a href="/test/" class="hover:text-[#fabf0e]">Home</a>
          <a href="/test/about" class="hover:text-[#fabf0e]">About Us</a>
          <a href="/test/job" class="hover:text-[#fabf0e]">Jobs</a>
          <a href="/test/service" class="hover:text-[#fabf0e]">Services</a>
          <a href="/test/faqs" class="hover:text-[#fabf0e]">FAQs</a>
          <a href="/test/contact" class="hover:text-[#fabf0e]">Contact Us</a>

          <!-- Animated Apply Now CTA -->
         <a href="/test/apply" class="relative inline-flex items-center justify-center px-5 py-2 text-white font-semibold rounded-full bg-[#f08024] shadow-lg hover:text-shadow-lg/50 text-shadow-black hover:scale-105 transition-all duration-300 ease-in-out">
  Apply Now
</a>
        </nav>
      </div>

      <!-- Off-canvas drawer (below top-bar) -->
      <div
        x-show="open"
        x-transition:enter="transition ease-out duration-300"
        x-transition:enter-start="translate-x-full"
        x-transition:enter-end="translate-x-0"
        x-transition:leave="transition ease-in duration-300"
        x-transition:leave-start="translate-x-0"
        x-transition:leave-end="translate-x-full"
        class="fixed top-[36px] right-0 bottom-0 w-64 bg-white shadow-lg p-6 z-20 flex flex-col"
      >
        <button @click="open = false" class="self-end text-xl mb-4">✕</button>
        <nav class="flex flex-col space-y-4">
          <a href="/test/" @click="open=false" class="hover:text-[#fabf0e]">Home</a>
          <a href="/test/about" @click="open=false" class="hover:text-[#fabf0e]">About Us</a>
          <a href="/test/job" @click="open=false" class="hover:text-[#fabf0e]">Jobs</a>
          <a href="/test/service" @click="open=false" class="hover:text-[#fabf0e]">Services</a>
          <a href="/test/faqs" @click="open=false" class="hover:text-[#fabf0e]">FAQs</a>
          <a href="/test/contact" @click="open=false" class="hover:text-[#fabf0e]">Contact Us</a>

          <a href="/test/apply" @click="open=false" class="relative inline-flex items-center justify-center px-5 py-2 text-white font-semibold rounded-full bg-[#f08024] shadow-md hover:text-shadow-lg/50 text-shadow-black hover:scale-105 transition-all duration-300 ease-in-out">
  Apply Now
</a>
        </nav>
      </div>
    </header>

    <!-- Main content -->
    <main class="max-w mx-auto">
      <slot />
    </main>

    <!-- Footer (unchanged) -->
    <footer>
      <section class="bg-[#2b2b2b] text-[#d5d5d5] py-10">
        <div class="max-w-6xl mx-auto px-6">
          <div class="flex flex-col md:flex-col justify-between items-center">
            <div class="mb-6 md:mb-0">
              <img src={FooterLogo.src} alt="Footer Logo" class="h-auto w-auto" />
            </div>
            <div class="text-center md:text-left pt-5">
              <div class="grid grid-cols-3 md:flex md:justify-start gap-x-4 gap-y-2 text-left">
                <a href="/test/about" class="hover:text-blue-400">&rarr; About Us</a>
                <a href="/test/job" class="hover:text-blue-400">&rarr; Jobs</a>
                <a href="/test/service" class="hover:text-blue-400">&rarr; Services</a>
                <a href="/test/faqs" class="hover:text-blue-400">&rarr; FAQs</a>
                <a href="/test/contact" class="hover:text-blue-400">&rarr; Contact Us</a>
                <a href="https://gdtsolution.com/wp-login.php" target="_blank" rel="noopener noreferrer" class="hover:text-blue-400">&rarr; Login</a>
                <a href="https://gdtsolution.com/wp-login.php?action=register" target="_blank" rel="noopener noreferrer" class="hover:text-blue-400">&rarr; Register</a>
                <a href="/test/privacy" class="hover:text-blue-400">&rarr; Privacy Policy</a>
              </div>
              <div class="flex justify-center mt-6">
                <div class="flex items-center justify-center text-[#0077b5] border-2 border-[#0077b5] p-3 rounded-full transition-all duration-200 hover:bg-[#0077b5] hover:text-white">
                  <a href="https://www.linkedin.com" target="_blank" rel="noopener noreferrer" title="Visit our LinkedIn">
                    <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                      <path d="M4.98 3.5C4.98 4.88 3.88 6 2.5 6S0 4.88 0 3.5 1.12 1 2.5 1s2.48 1.12 2.48 2.5zM0 24h5V7H0v17zM7.5 7h4.8v2.56h.07c.67-1.27 2.3-2.6 4.73-2.6 5.06 0 6 3.33 6 7.66V24h-5v-7.74c0-1.84-.03-4.2-2.55-4.2-2.56 0-2.95 2-2.95 4.06V24h-5V7z" />
                    </svg>
                  </a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>
      <div class="bg-[#1b1a1a] text-[#d5d5d5] text-center p-4 text-sm">
        © {currentYear}. Global Dynamic Talent Solutions. All Rights Reserved
      </div>
    </footer>

    <!-- Scroll-to-Top Button -->
    <button
      id="backToTopBtn"
      class="fixed bottom-6 right-6 z-50 hidden bg-[#fabf0e] text-black px-4 py-2 rounded-full shadow-md hover:bg-yellow-400 transition-opacity">
      ↑ Top
    </button>

    <script is:inline>
      window.addEventListener('scroll', () => {
        const btn = document.getElementById('backToTopBtn');
        if (btn) btn.classList.toggle('hidden', window.scrollY <= 300);
      });
    </script>
  </body>
</html>

<style>
  html,body { margin:0; width:100%; height:100%; overflow-x:hidden; font-family:'Poppins',sans-serif; }
</style>