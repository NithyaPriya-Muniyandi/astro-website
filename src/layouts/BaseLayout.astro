---
/* 1. Imports */
import logo           from './../assets/logo-gd.webp';
import FooterLogo     from './../assets/footer-logo.webp';
import WhatsAppIcon   from './../assets/whatsapp.webp';
import RegisterIcon   from './../assets/register.webp';
import LoginIcon      from './../assets/login.webp';

/* 2. Astro View-Transitions Router */
import { ClientRouter } from 'astro:transitions';

/* 3. Props */
const { title = 'Global Dynamic Talent Solution',
        description = 'Global Dynamic Talent Solution is your trusted partner for staffing, recruitment, and career solutions.' } = Astro.props;
const currentYear = new Date().getFullYear();
--- 

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/webp" href="/favicon.webp" />
    <meta name="generator" content={Astro.generator} />
    <meta name="turbo-cache-control" content="no-preview" />
    <title>{title}</title>

    <!-- Alpine CDN -->
    <script defer src="https://unpkg.com/alpinejs@3.x.x/dist/cdn.min.js"></script>

    <!-- Astro Client Router -->
    <ClientRouter />
  </head>

  <body class="bg-white text-gray-900 font-poppins" x-data="{ open: false }">

    <!-- TOP BAR (unchanged) -->
    <div class="bg-[#3689e7] text-xs md:text-sm text-gray-100 py-2 px-4 md:px-20 flex justify-between items-center">
      <div><p>We are the No.1 job consultancy</p></div>
      <div class="flex items-center space-x-6">
        <a href="https://api.whatsapp.com/send?phone=918220782221" target="_blank" rel="noopener noreferrer" title="Chat on WhatsApp" class="hover:opacity-80">
          <img src={WhatsAppIcon.src} alt="WhatsApp" class="w-5 h-5" />
        </a>
        <a href="https://gdtsolution.com/wp-login.php" target="_blank" rel="noopener noreferrer" class="flex items-center space-x-1 hover:text-yellow-500">
          <img src={LoginIcon.src} alt="Login" class="w-4 h-4" />
          <span>Login</span>
        </a>
        <a href="https://gdtsolution.com/wp-login.php?action=register" target="_blank" rel="noopener noreferrer" class="flex items-center space-x-1 hover:text-yellow-500">
          <img src={RegisterIcon.src} alt="Register" class="w-4 h-4" />
          <span>Register</span>
        </a>
      </div>
    </div>

    <!-- HEADER with off-canvas (below top-bar) -->
    <header class="sticky top-0 z-30 bg-white text-black p-4 shadow">
      <div class="max-full-w mx-auto flex justify-between items-center md:px-20">
        <a href="/test/">
          <img src={logo.src} alt="GDTS Logo" class="h-14 w-auto" />
        </a>

        <!-- Hamburger (mobile) -->
        <button @click="open = true" class="md:hidden text-2xl">☰</button>

        <!-- Desktop Nav + CTA -->
        <nav class="hidden md:flex items-center space-x-6">
          <a href="/test/" class="hover:text-[#fabf0e]">Home</a>
          <a href="/test/about" class="hover:text-[#fabf0e]">About Us</a>
          <a href="/test/job" class="hover:text-[#fabf0e]">Jobs</a>
          <a href="/test/service" class="hover:text-[#fabf0e]">Services</a>
          <a href="/test/faqs" class="hover:text-[#fabf0e]">FAQs</a>
          <a href="/test/contact" class="hover:text-[#fabf0e]">Contact Us</a>

          <!-- Animated Apply Now CTA -->
         <a href="/test/contact" class="relative inline-flex items-center justify-center px-5 py-2 text-white font-semibold rounded-full bg-[#f08024] shadow-lg hover:text-shadow-lg/50 text-shadow-black hover:scale-105 transition-all duration-300 ease-in-out">
  Apply Now
</a>
        </nav>
      </div>

      <!-- Off-canvas drawer (below top-bar) -->
      <div
        x-show="open"
        x-transition:enter="transition ease-out duration-300"
        x-transition:enter-start="translate-x-full"
        x-transition:enter-end="translate-x-0"
        x-transition:leave="transition ease-in duration-300"
        x-transition:leave-start="translate-x-0"
        x-transition:leave-end="translate-x-full"
        class="fixed top-[36px] right-0 bottom-0 w-64 bg-white shadow-lg p-6 z-20 flex flex-col"
      >
        <button @click="open = false" class="self-end text-xl mb-4">✕</button>
        <nav class="flex flex-col space-y-4">
          <a href="/test/" @click="open=false" class="hover:text-[#fabf0e]">Home</a>
          <a href="/test/about" @click="open=false" class="hover:text-[#fabf0e]">About Us</a>
          <a href="/test/job" @click="open=false" class="hover:text-[#fabf0e]">Jobs</a>
          <a href="/test/service" @click="open=false" class="hover:text-[#fabf0e]">Services</a>
          <a href="/test/faqs" @click="open=false" class="hover:text-[#fabf0e]">FAQs</a>
          <a href="/test/contact" @click="open=false" class="hover:text-[#fabf0e]">Contact Us</a>

          <a href="/test/contact" @click="open=false" class="relative inline-flex items-center justify-center px-5 py-2 text-white font-semibold rounded-full bg-[#f08024] shadow-md hover:text-shadow-lg/50 text-shadow-black hover:scale-105 transition-all duration-300 ease-in-out">
  Apply Now
</a>
        </nav>
      </div>
    </header>

    <!-- Main content -->
    <main class="max-w mx-auto">
      <slot />
    </main>

    <!-- Footer (unchanged) -->
    <footer>
      <section class="bg-[#2b2b2b] text-[#d5d5d5] py-10">
        <div class="max-w-6xl mx-auto px-6">
          <div class="flex flex-col md:flex-col justify-between items-center">
            <div class="mb-6 md:mb-0">
              <img src={FooterLogo.src} alt="Footer Logo" class="h-auto w-auto" />
            </div>
            <div class="text-center md:text-left pt-5">
              <div class="grid grid-cols-2 md:flex md:justify-start gap-x-4 gap-y-2 text-left">
                <a href="/test/about" class="hover:text-blue-400">&rarr; About Us</a>
                <a href="/test/job" class="hover:text-blue-400">&rarr; Jobs</a>
                <a href="/test/service" class="hover:text-blue-400">&rarr; Services</a>
                <a href="/test/faqs" class="hover:text-blue-400">&rarr; FAQs</a>
                <a href="/test/contact" class="hover:text-blue-400">&rarr; Contact Us</a>
                <a href="https://gdtsolution.com/wp-login.php" target="_blank" rel="noopener noreferrer" class="hover:text-blue-400">&rarr; Login</a>
                <a href="https://gdtsolution.com/wp-login.php?action=register" target="_blank" rel="noopener noreferrer" class="hover:text-blue-400">&rarr; Register</a>
                <a href="/test/privacy" class="hover:text-blue-400">&rarr; Privacy Policy</a>
              </div>
              <div class="flex justify-center mt-6">
               <!-- ===== ADD BELOW THE EXISTING LINKEDIN ICON ===== -->
<div class="flex items-center justify-center gap-3 mt-6 text-gray-400">

  <!-- Facebook -->
  <a href="https://www.facebook.com/profile.php?id=61575827112685"
     target="_blank" rel="noopener noreferrer"
     title="Facebook"
     class="w-7 h-7 md:w-12 md:h-12 flex items-center justify-center rounded-full border-2 hover:bg-blue-600 hover:text-white border-gray-500 hover:border-blue-600 hover:text-blue-600 transition">
    <svg class="w-4 h-4 md:w-6 md:h-6 fill-current" viewBox="0 0 24 24">
      <path d="M14,6h3a1,1,0,0,0,1-1V3a1,1,0,0,0-1-1H14A5,5,0,0,0,9,7v3H7a1,1,0,0,0-1,1v2a1,1,0,0,0,1,1H9v7a1,1,0,0,0,1,1h2a1,1,0,0,0,1-1V14h2.22a1,1,0,0,0,1-.76l.5-2a1,1,0,0,0-1-1.24H13V7A1,1,0,0,1,14,6Z"/>
    </svg>
  </a>

  <!-- Instagram -->
  <a href="https://www.instagram.com/official_gdts/"
     target="_blank" rel="noopener noreferrer"
     title="Instagram"
     class="w-7 h-7 md:w-12 md:h-12 flex items-center justify-center rounded-full border-2 border-gray-500 hover:border-purple-500 hover:bg-gradient-to-tr from-yellow-400 via-pink-500 to-purple-600 hover:text-white transition">
    <svg class="w-4 h-4 md:w-6 md:h-6 fill-current" viewBox="0 0 24 24">
      <path fill-rule="evenodd" clip-rule="evenodd" d="M3 11C3 7.22876 3 5.34315 4.17157 4.17157C5.34315 3 7.22876 3 11 3H13C16.7712 3 18.6569 3 19.8284 4.17157C21 5.34315 21 7.22876 21 11V13C21 16.7712 21 18.6569 19.8284 19.8284C18.6569 21 16.7712 21 13 21H11C7.22876 21 5.34315 21 4.17157 19.8284C3 18.6569 3 16.7712 3 13V11ZM18 7.5C18 8.32843 17.3284 9 16.5 9C15.6716 9 15 8.32843 15 7.5C15 6.67157 15.6716 6 16.5 6C17.3284 6 18 6.67157 18 7.5ZM14 13C14 14.1046 13.1046 15 12 15C10.8954 15 10 14.1046 10 13C10 11.8954 10.8954 11 12 11C13.1046 11 14 11.8954 14 13ZM16 13C16 15.2091 14.2091 17 12 17C9.79086 17 8 15.2091 8 13C8 10.7909 9.79086 9 12 9C14.2091 9 16 10.7909 16 13Z"/>
    </svg>
  </a>

  <a href="https://www.linkedin.com/company/global-dynamic-talent-solutions" 
     target="_blank" rel="noopener noreferrer"
     title="Visit our LinkedIn"
     class="flex items-center justify-center w-7 h-7 md:w-12 md:h-12 border-2 border-gray-500 rounded-full transition-all duration-200 hover:bg-[#0077b5] hover:border-[#0077b5] hover:text-white">
     <svg class="w-4 h-4 md:w-auto md:h-6 fill-current" viewBox="0 -0.5 20 25">
      <path  d='M19.959 11.719v7.379h-4.278v-6.885c0-1.73-.619-2.91-2.167-2.91-1.182 0-1.886.796-2.195 1.565-.113.275-.142.658-.142 1.043v7.187h-4.28s.058-11.66 0-12.869h4.28v1.824l-.028.042h.028v-.042c.568-.875 1.583-2.126 3.856-2.126 2.815 0 4.926 1.84 4.926 5.792zM2.421.026C.958.026 0 .986 0 2.249c0 1.235.93 2.224 2.365 2.224h.028c1.493 0 2.42-.989 2.42-2.224C4.787.986 3.887.026 2.422.026zM.254 19.098h4.278V6.229H.254v12.869z'/>
    </svg>
  </a>

  <!-- X / Twitter -->
  <a href="https://x.com/GDTS_Official"
     target="_blank" rel="noopener noreferrer"
     title="X (Twitter)"
     class="w-7 h-7 md:w-12 md:h-12 flex items-center justify-center rounded-full border-2 border-gray-500 hover:border-black hover:bg-black hover:text-white transition">
    <svg class="w-4 h-4 md:w-6 md:h-6 fill-current" viewBox="0 0 24 24">
      <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
    </svg>
  </a>

  <!-- YouTube -->
  <a href="https://www.youtube.com/@GlobalDynamicTalentSolutions"
     target="_blank" rel="noopener noreferrer"
     title="YouTube"
     class="w-7 h-7 md:w-12 md:h-12 flex items-center justify-center rounded-full border-2 border-gray-500 hover:border-red-600 hover:bg-red-600 hover:text-white transition">
    <svg class="w-4 h-4 md:w-6 md:h-6 fill-current" viewBox="0 0 24 24">
      <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/>
    </svg>
  </a>

  <!-- Mail -->
  <a href="mailto:info@gdtsolution.com"
     title="Email us"
     class="w-7 h-7 md:w-12 md:h-12 flex items-center justify-center rounded-full border-2 border-gray-500 hover:border-green-600 hover:bg-green-600 hover:text-white transition">
    <svg class="w-4 h-4 md:w-6 md:h-6 fill-current" viewBox="0 0 24 24">
      <path d="M20 4H4c-1.1 0-1.99.9-1.99 2L2 18c0 1.1.89 2 2 2h16c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 4l-8 5-8-5V6l8 5 8-5v2z"/>
    </svg>
  </a>

</div>
              </div>
            </div>
          </div>
        </div>
      </section>
      <div class="bg-[#1b1a1a] text-[#d5d5d5] text-center p-4 text-xs md:text-sm">
        © {currentYear}. Global Dynamic Talent Solutions. All Rights Reserved
      </div>
    </footer>

    <!-- Scroll-to-Top Button -->
    <button
      id="backToTopBtn"
      class="fixed bottom-6 right-6 z-50 hidden bg-[#fabf0e] text-black px-4 py-2 rounded-full shadow-md hover:bg-yellow-400 transition-opacity">
      ↑ Top
    </button>

    <script is:inline>
      window.addEventListener('scroll', () => {
        const btn = document.getElementById('backToTopBtn');
        if (btn) btn.classList.toggle('hidden', window.scrollY <= 300);
      });
    </script>
  </body>
</html>

<style>
  html,body { margin:0; width:100%; height:100%; overflow-x:hidden; font-family:'Poppins',sans-serif; }
</style>