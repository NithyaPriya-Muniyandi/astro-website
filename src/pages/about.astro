<script>
(() => {
  /* ---------- DESKTOP TABS (≥ 768 px) ---------- */
  const buttons = document.querySelectorAll<HTMLButtonElement>('.tab-btn');
  const panels  = document.querySelectorAll<HTMLDivElement>('#tab-panels .panel');

  const switchTab = (tabName: string): void => {
    buttons.forEach(btn => {
      const active = btn.dataset.tab === tabName;
      btn.classList.toggle('ring-2', active);
      btn.classList.toggle('ring-blue-500', active);
      btn.classList.toggle('ring-offset-2', active);
      btn.classList.toggle('border-blue-500', active);
      btn.classList.toggle('border-transparent', !active);
      btn.classList.toggle('text-blue-600', active);
      btn.classList.toggle('text-gray-700', !active);
      btn.classList.toggle('font-semibold', active);
    });
    panels.forEach(p => p.classList.toggle('hidden', p.id !== tabName));
  };

  buttons.forEach(b => b.addEventListener('click', () => switchTab(b.dataset.tab!)));
  if (window.innerWidth >= 768) switchTab('RAInfo');

  /* ---------- MOBILE ACCORDION (< 768 px) ---------- */
  document.querySelectorAll<HTMLDetailsElement>('#accordion details').forEach(details => {
    details.addEventListener('toggle', () => {
      if (details.open) {
        document.querySelectorAll<HTMLDetailsElement>('#accordion details').forEach(d => {
          if (d !== details) d.open = false;
        });
      }
    });
  });
})();
</script>
