 <script>
  document.addEventListener("DOMContentLoaded", () => {
    const buttons = document.querySelectorAll(".tab-button") as NodeListOf<HTMLButtonElement>;
    const panels = document.querySelectorAll(".tab-panel");
    const accordionHeaders = document.querySelectorAll(".accordion-header");

    // Media query to check screen width
    const isMdUp = () => window.matchMedia("(min-width: 768px)").matches;

    function activateTabs() {
      // Initialize first tab active by default
      if (buttons.length > 0) {
        buttons[0].classList.add("border-blue-500", "font-semibold");
        panels.forEach((p, i) => {
          p.classList.toggle("hidden", i !== 0);
        });
      }

      buttons.forEach((btn) => {
        btn.addEventListener("click", () => {
          const target = btn.dataset.tab;

          buttons.forEach((b) => {
            b.classList.remove("border-blue-500", "font-semibold");
            b.classList.add("border-transparent");
          });
          btn.classList.add("border-blue-500", "font-semibold");
          btn.classList.remove("border-transparent");

          panels.forEach((panel) => {
            if (panel.id === target) {
              panel.classList.remove("hidden");
            } else {
              panel.classList.add("hidden");
            }
          });
        });
      });
    }

    function activateAccordion() {
      accordionHeaders.forEach((header) => {
        header.addEventListener("click", () => {
          const content = header.nextElementSibling as HTMLElement | null;
          if (!content) return;

          const isVisible = !content.classList.contains("hidden");

          // Close all
          document.querySelectorAll(".accordion-content").forEach((acc) => {
            (acc as HTMLElement).classList.add("hidden");
          });

          // Toggle clicked
          if (!isVisible) {
            content.classList.remove("hidden");
          }
        });
      });
    }

    // Apply behavior based on screen size
    if (isMdUp()) {
      activateTabs();
    } else {
      activateAccordion();
    }

    // Optional: Respond to resize (if you want to switch behavior dynamically)
    window.addEventListener("resize", () => {
      location.reload(); // Reload on resize breakpoint crossing for simplicity
    });
  });
</script>

