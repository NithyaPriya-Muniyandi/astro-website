---
import '../../styles/global.css';
import upload from '../../assets/evaluation.webp';
import JobOpening from './JobOpening.astro';
import JobAlert from './JobAlert.astro';
import EmpowerCareer from './EmpowerCareer.astro';
import GlobalBrand from './GlobalBrand.astro';
import ClientCandidate from './ClientCandidate.astro';
import Faq from './Faq.astro';
import bannerMobile from '../../assets/gdts-banner-mb.webp';
import bannerDesktop from '../../assets/gdts-banner.webp';
---

<section
  class="banner-bg bg-black bg-contain bg-top md:bg-cover bg-no-repeat h-auto md:h-[750px] text-center py-10 md:py-20 px-4 text-white"
  style={`--banner-mobile: url(${bannerMobile.src}); --banner-desktop: url(${bannerDesktop.src}); background-image: var(--banner-mobile);`}
>
  <style>
    @media (min-width: 768px) {
      .banner-bg {
        background-image: var(--banner-desktop) !important;
      }
    }
  </style>
  <div class="max-w-7xl mx-auto mt-[200px] md:pt-[0px] md:mt-[350px]">
    <h1 class="text-2xl md:text-5xl text-[#ffd425] font-bold mb-4 text-shadow-lg/50 text-shadow-black">
      Connecting Global Talent with the Right Opportunity
    </h1>
    <p class="text-lg md:text-2xl text-white mb-6 text-shadow-lg/50 text-shadow-700">
      Whether youâ€™re a professional seeking your next role or an employer looking for top-tier talent, we make the match seamless.
    </p>

    <div class="flex flex-col md:flex-row justify-center space-y-4 md:space-y-0 md:space-x-4">
      <!-- Upload Resume Box -->
      <div class="bg-gray-700/50 shadow-md flex flex-col md:flex-row justify-between items-center rounded-lg p-4 w-full md:w-1/2 text-center border border-gray-600">
        <div>
          <h2 class="text-lg md:text-xl text-white text-center md:text-left font-semibold mb-2">Submit your resume</h2>
          <p class="text-[#ffd425] text-left">Max 3 MB, Type: doc, docx, pdf</p>
        </div>
        <a href="https://gdtsolution.com/upload-your-cv/" class="block">
          <div class="flex flex-row justify-around items-center bg-[#328eed] px-4 rounded-lg transition duration-300 group">
            <img src={upload.src} alt="Upload CV" class="h-12 w-12 md:h-16 md:w-16 rounded-full object-cover" />
            <p class="text-white font-semibold group-hover:text-black">UPLOAD YOUR CV</p>
          </div>
        </a>
      </div>

      <!-- Find Job Box -->
      <div class="bg-gray-700/50 shadow-md flex flex-col md:flex-row justify-between items-center rounded-lg p-4 w-full md:w-1/3 text-center border border-gray-600">
        <div>
          <h3 class="text-lg md:text-xl text-white text-left font-semibold mb-2">Find Jobs</h3>
        </div>
        <a href="https://gdtsolution.com/upload-your-cv/" class="block">
          <div class="flex flex-row justify-around items-center bg-[#328eed] px-4 rounded-lg transition duration-300 group">
            <img src={upload.src} alt="Find Job" class="h-12 w-12 md:h-16 md:w-16 rounded-full object-cover" />
            <p class="text-white font-semibold group-hover:text-black">FIND YOUR JOB</p>
          </div>
        </a>
      </div>
    </div>
  </div>
</section>

<JobOpening />
<JobAlert />
<EmpowerCareer />
<GlobalBrand />
<ClientCandidate />
<Faq />

