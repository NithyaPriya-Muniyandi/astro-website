---
import searchJobBg from '../../assets/searchJob.webp';
---
<section class="grid grid-cols-1 md:grid-cols-5 w-full">
  <!-- Left side with background image (3/5 width) -->
  <div
    class="md:col-span-3 bg-no-repeat bg-cover bg-[#e5e0dc] h-full w-full md:py-20 px-4 text-[#292929] text-center flex items-center justify-center"
    style={`background-image: url(${searchJobBg.src}); background-position: -12rem top;`}
  >
    <!-- Optional content -->
  </div>

  <!-- Right side (form area) (2/5 width) -->
  <div class="md:col-span-2 bg-[#328eed] py-10 md:py-20 px-4 flex items-center justify-start">
    <div class="max-w-xs w-full text-white">
      <h2 class="text-2xl md:text-4xl font-bold mb-4">Stay Updated â€“ Get Job Alerts</h2>
      <p class="my-5">Sign up for tailored job alerts based on location, skills, and career goals.</p>
      <form>
        <input type="text" placeholder="Enter your name" class="w-full p-3 mb-4 bg-[#f5f5f5] text-gray-500 rounded-sm shadow-md" />
        <input type="email" placeholder="Enter your email" class="w-full p-3 mb-4 bg-[#f5f5f5] text-gray-500 rounded-sm shadow-md" />
        <input class="bg-yellow-500 px-4 py-3 rounded hover:text-black border-3 border-yellow-300/80" type="submit" value="SUBSCRIBE" />
      </form>
      <p class="mt-3">Thank you, your sign-up request was successful! Please check your email inbox to confirm.</p>
    </div>
  </div>
</section>
