---
import '../../styles/global.css';

import sivaVideo from '../../assets/siva.mp4';
import sudhaVideo from '../../assets/sudhakar1.mp4';
import gnanaVideo from '../../assets/Gnanarajc.mp4';
import poster from '../../assets/poster.webp';
---

<section class="text-center py-10 md:py-20 px-4 bg-white text-[#292929]">
  <div class="max-w-7xl mx-auto">
    <h2 class="text-2xl md:text-4xl font-bold mb-10">What Our Clients & Candidates Say</h2>

    <div id="testimonial-section" class="hidden transition-opacity duration-1000 opacity-0">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-12">
        <div>
          <p class="text-lg md:text-xl my-2">Mr. Siva Vinoth Kannan</p>
          <video
            src={sivaVideo}
            poster={poster.src}
            controls
            class="w-full h-auto shadow-md rounded-lg"
          ></video>
        </div>

        <div>
          <p class="text-lg md:text-xl my-2">Mr. Sudhakar</p>
          <video
            src={sudhaVideo}
            poster={poster.src}
            controls
            class="w-full h-auto shadow-md rounded-lg"
          ></video>
        </div>

        <div>
          <p class="text-lg md:text-xl my-2">Mr. Gnanaraj</p>
          <video
            src={gnanaVideo}
            poster={poster.src}
            controls
            class="w-full h-auto shadow-md rounded-lg"
          ></video>
        </div>
      </div>

      <div class="bg-[#328eed] text-white flex flex-col md:flex-row justify-between items-start md:items-center p-8 md:p-14 rounded-lg shadow-md">
        <div class="md:w-3/5 w-full mb-4 md:mb-0">
          <h2 class="text-2xl md:text-4xl font-bold">Let’s Build the Future of Work Together</h2>
          <p class="text-[#ffd425] text-sm">
            Whether you’re hiring or job hunting, our expert consultants are ready to assist.
          </p>
        </div>
        <div class="md:w-2/5 w-full flex flex-wrap gap-2 justify-center md:justify-end">
          <a
            href="https://gdtsolution.com/jobs/"
            class="flex items-center gap-2 px-6 py-3 bg-yellow-400 text-black border-[3px] border-yellow-200/50 rounded-md hover:bg-yellow-300 transition-colors duration-300"
          >
            Find Your Next Job Now
          </a>
          <a
            href="https://gdtsolution.com/contact-us/"
            class="flex items-center gap-2 px-6 py-3 bg-yellow-400 text-black border-[3px] border-yellow-200/50 rounded-md hover:bg-yellow-300 transition-colors duration-300"
          >
            Contact Us
          </a>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Delay load script -->
<script>
  setTimeout(() => {
    const section = document.getElementById('testimonial-section');
    if (section) {
      section.classList.remove('hidden');
      section.classList.add('opacity-100');
    }
  }, 4000);
</script>
